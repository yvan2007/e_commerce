# Configuration E-Commerce Côte d'Ivoire
# Copiez ce fichier vers .env et modifiez les valeurs
# N'ajoutez JAMAIS le fichier .env dans Git !

# Sécurité
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Base de données
DATABASE_URL=sqlite:///db.sqlite3
# Pour PostgreSQL en production:
# DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce_db

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=E-Commerce CI <noreply@ecommerce-ci.com>

# Google OAuth (pour l'authentification Google)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Fichiers statiques et média
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Site URL
SITE_URL=http://localhost:8000

# Cache (pour la production)
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Paiements (à configurer selon vos besoins)
MOOV_MONEY_API_KEY=your-moov-money-api-key
ORANGE_MONEY_API_KEY=your-orange-money-api-key
MTN_MONEY_API_KEY=your-mtn-money-api-key
WAVE_API_KEY=your-wave-api-key

# Sécurité supplémentaire
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Internationalisation
LANGUAGE_CODE=fr-fr
TIME_ZONE=Africa/Abidjan
USE_I18N=True
USE_TZ=True
